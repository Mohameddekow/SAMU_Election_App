<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/schoolRepProfileImage"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:src="@drawable/profile"
        app:civ_border_color="@color/teal_200"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/schoolRepName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="10dp"
        android:text="Name:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/schoolRepSchool"
        app:layout_constraintStart_toEndOf="@+id/schoolRepProfileImage"
        app:layout_constraintTop_toTopOf="@+id/schoolRepProfileImage" />

    <TextView
        android:id="@+id/schoolRepSchool"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="10dp"
        android:text="School:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/schoolRepResult"
        app:layout_constraintStart_toEndOf="@+id/schoolRepProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/schoolRepName" />

    <TextView
        android:id="@+id/schoolRepPosition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="10dp"
        android:text="Position:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/schoolRepResult"
        app:layout_constraintStart_toEndOf="@+id/schoolRepProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/schoolRepSchool" />

    <TextView
        android:id="@+id/schoolRepResult"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:text="88%"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>