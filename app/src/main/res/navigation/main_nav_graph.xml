<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.samuelectionapp.splash.SplashFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.samuelectionapp.auth.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment2"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.samuelectionapp.home.HomeFragment"
        android:label="  Dashboard"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_contestantsFragment"
            app:destination="@id/contestantsFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_helpFragment"
            app:destination="@id/helpFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_addVotersFragment"
            app:destination="@id/addVotersFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_addContestantsFragment"
            app:destination="@id/addContestantsFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_chooseSchoolResultsFragment"
            app:destination="@id/chooseSchoolResultsFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_chooseSchoolVoteFragment"
            app:destination="@id/chooseSchoolVoteFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_setElectionTimeFragment"
            app:destination="@id/setElectionTimeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addVotersFragment"
        android:name="com.example.samuelectionapp.fragments.admin.voters.AddVotersFragment"
        android:label="Add Voters"
        tools:layout="@layout/fragment_add_voters" />
    <fragment
        android:id="@+id/addContestantsFragment"
        android:name="com.example.samuelectionapp.fragments.admin.contestants.AddContestantsFragment"
        android:label="Add  Contestants"
        tools:layout="@layout/fragment_add_contestants" >
        <action
            android:id="@+id/action_addContestantsFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/helpFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.samuelectionapp.fragments.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.samuelectionapp.fragments.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/contestantsFragment"
        android:name="com.example.samuelectionapp.fragments.contestants.ContestantsFragment"
        android:label="Contestants"
        tools:layout="@layout/fragment_contestants" />
    <fragment
        android:id="@+id/voteNowFragment"
        android:name="com.example.samuelectionapp.fragments.vote.voteNow.VoteNowFragment"
        android:label="Vote now"
        tools:layout="@layout/fragment_vote_now" />
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.example.samuelectionapp.fragments.help.HelpFragment"
        android:label="Help"
        tools:layout="@layout/fragment_help" />
    <fragment
        android:id="@+id/resultsFragment"
        android:name="com.example.samuelectionapp.fragments.results.viewResult.ResultsFragment"
        android:label="Results"
        tools:layout="@layout/fragment_results" />
    <fragment
        android:id="@+id/chooseSchoolResultsFragment"
        android:name="com.example.samuelectionapp.fragments.results.chooseSchool.ChooseSchoolResultsFragment"
        android:label="Choose school"
        tools:layout="@layout/fragment_choose_school_results">
        <action
            android:id="@+id/action_chooseSchoolResultsFragment_to_resultsFragment"
            app:destination="@id/resultsFragment"
            app:popUpTo="@id/helpFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/chooseSchoolVoteFragment"
        android:name="com.example.samuelectionapp.fragments.vote.chooseSchools.ChooseSchoolVoteFragment"
        android:label="Choose school"
        tools:layout="@layout/fragment_choose_school_vote" >
        <action
            android:id="@+id/action_chooseSchoolVoteFragment_to_voteNowFragment"
            app:destination="@id/voteNowFragment"
            app:popUpTo="@id/helpFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/setElectionTimeFragment"
        android:name="com.example.samuelectionapp.fragments.admin.SetElectionTimeFragment"
        android:label="Set Election Time"
        tools:layout="@layout/fragment_set_election_time" />
</navigation>